<?xml version="1.0" encoding="utf-8"?>
<com.android.widget.MLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android.app.MainActivity">

    <TextView
        android:id="@+id/sample_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <Button
        android:id="@+id/aidl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用AIDL获取服务端内容"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />


    <Button
        android:id="@+id/player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lockScreen"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="81dp" />

    <Button
        android:id="@+id/bluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bluetooth"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="81dp" />


    <com.android.widget.MTextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="#00f"
        android:gravity="center"
        android:text="TouchMe"
        android:textColor="#fff" />
</com.android.widget.MLinearLayout>

